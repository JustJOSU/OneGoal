<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/update_frame1"
    tools:context=".Login.ProfileActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <soup.neumorphism.NeumorphCardView
            android:id="@+id/NeumorPh_head"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="20dp"

            >
            <RelativeLayout
                android:id="@+id/layoutHead"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                >
                <soup.neumorphism.NeumorphImageButton
                    android:id="@+id/button_save"
                    style="@style/Widget.Neumorph.ImageButton"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:scaleType="fitXY"
                    android:layout_alignParentRight="true"
                    android:layout_alignRight="@+id/edit_text_name"
                    android:layout_alignBottom="@+id/edit_text_name"
                    android:src="@drawable/ic_navigation_check_24"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:neumorph_shapeType="flat" />
                <soup.neumorphism.NeumorphCardView
                    android:id="@+id/profile_image_NeumorphCardView"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    app:neumorph_shapeAppearance="@style/ShapeAppearance.Neumorph.FloatingActionButton"
                    app:neumorph_shapeType="basin">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/profile_image_view"
                        android:background="@drawable/user"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="10dp"
                        />

                </soup.neumorphism.NeumorphCardView>


                <EditText
                    android:hint="Enter Name"
                    android:textAlignment="center"
                    android:layout_marginTop="5dp"
                    android:textColor="#cdbef3"
                    android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/profile_image_NeumorphCardView"
                    tools:text="User"
                    android:enabled="true"
                    android:maxLines="1"
                    android:id="@+id/edit_text_name"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"/>

                <ProgressBar
                    android:visibility="invisible"
                    android:id="@+id/progressbar_pic"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>
        </soup.neumorphism.NeumorphCardView>


        <LinearLayout
            android:layout_marginTop="10dp"
            android:padding="16dp"
            android:layout_centerHorizontal="true"
            android:orientation="vertical"
            android:layout_below="@id/NeumorPh_head"
            android:layout_width="360dp"
            android:layout_height="match_parent">

            <TextView
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:layout_gravity="top"
                android:drawablePadding="16dp"
                android:drawableLeft="@drawable/ic_email"
                tools:text="user@gmail.com"
                android:id="@+id/text_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/text_not_verified"
                android:visibility="invisible"
                android:textColor="@android:color/holo_red_dark"
                android:layout_gravity="right"
                android:layout_marginBottom="9dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:text="Not Verified (Click to Verify)"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:layout_gravity="top"
                android:drawablePadding="16dp"
                android:drawableLeft="@drawable/ic_lock"
                android:text="비밀번호 변경"
                android:enabled="true"
                android:id="@+id/text_password"
                android:layout_width="match_parent"
                android:layout_marginBottom="20dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:layout_gravity="top"
                android:drawablePadding="16dp"
                android:drawableLeft="@drawable/logout"
                android:text="로그아웃"
                android:enabled="true"
                android:id="@+id/logout"
                android:layout_width="match_parent"
                android:layout_marginBottom="20dp"
                android:layout_height="wrap_content"/>

            <EditText
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:layout_gravity="top"
                android:drawablePadding="16dp"
                android:drawableLeft="@drawable/ic_lock"
                android:text=""
                android:visibility="invisible"
                android:enabled="true"
                android:id="@+id/text_birth"
                android:layout_width="match_parent"
                android:layout_marginBottom="20dp"
                android:layout_height="wrap_content"/>
            <EditText
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:layout_gravity="top"
                android:drawablePadding="16dp"
                android:drawableLeft="@drawable/ic_lock"
                android:text=""
                android:visibility="invisible"
                android:enabled="true"
                android:id="@+id/text_gender"
                android:layout_width="match_parent"
                android:layout_marginBottom="20dp"
                android:layout_height="wrap_content"/>


            <ProgressBar
                android:id="@+id/progressbar"
                android:visibility="invisible"
                android:layout_margin="10dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        </LinearLayout>

    </RelativeLayout>

</FrameLayout>