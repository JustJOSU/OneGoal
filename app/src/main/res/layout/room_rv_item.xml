<?xml version="1.0" encoding="utf-8"?>
<soup.neumorphism.NeumorphCardView
    android:id="@+id/roomCardView"
    style="@style/ShapeAppearance.Neumorph.CardView"
    app:neumorph_shapeAppearance="@style/CustomShapeAppearance"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_width="256dp"
        android:layout_height="256dp"
        >
            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/item_photo"
                android:layout_width="180dp"
                android:layout_height="142dp"
                android:scaleType="fitXY"
                app:riv_corner_radius="40dp"
            />

        <TextView
            android:id="@+id/item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:textStyle="bold"
            android:layout_below="@id/item_photo"
            tools:text="Title" />

        <TextView
            android:id="@+id/item_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="8dp"
            android:maxLines="1"
            android:ems="5"
            android:ellipsize="end"
            android:layout_below="@id/item_title"

            tools:text="Hi! This is summary" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginStart="72dp"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/item_summary" />

    </RelativeLayout>


</soup.neumorphism.NeumorphCardView>