<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CustomShapeAppearance">
        <item name="neumorph_cornerFamily">rounded</item>
        <item name="neumorph_cornerSize">40dp</item>
    </style>
    <style name="CustomShapeAppearance2">
        <item name="neumorph_cornerFamily">rounded</item>
        <item name="neumorph_cornerSize">20dp</item>
    </style>
    <style name="CustomShapeAppearance3">
        <item name="neumorph_cornerFamily">rounded</item>
        <item name="neumorph_cornerSize">10dp</item>
    </style>
    <style name="CustomShapeAppearance4">
        <item name="neumorph_cornerFamily">rounded</item>
        <item name="neumorph_cornerSize">50dp</item>
    </style>
    <style name="CustomShapeAppearance5">
        <item name="neumorph_cornerFamily">rounded</item>
        <item name="neumorph_cornerSize">35dp</item>
    </style>

    <style name="ThemeDialogCustom">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
    </style>
    <style name="MyThemeDialogCustom" parent="android:Theme.Holo.Dialog.NoActionBar" >
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
    </style>
</resources>
